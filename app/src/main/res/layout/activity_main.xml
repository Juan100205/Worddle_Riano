<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="200dp">



    <!-- Fila 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:paddingHorizontal="120dp">
        <TextView
            android:id="@+id/tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worddle"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <androidx.cardview.widget.CardView
            android:id="@+id/letter1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/tittle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/letter2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/tittle"
            app:layout_constraintStart_toEndOf="@id/letter1"
            app:layout_constraintEnd_toStartOf="@id/letter3"

            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/letter3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/tittle"
            app:layout_constraintStart_toEndOf="@id/letter2"
            app:layout_constraintEnd_toStartOf="@id/letter4"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/letter4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/tittle"
            app:layout_constraintStart_toEndOf="@id/letter3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- Fila 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/letter1_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/letter2_1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter2_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter1"
            app:layout_constraintStart_toEndOf="@id/letter1_1"
            app:layout_constraintEnd_toStartOf="@id/letter3_1"
            android:layout_marginTop="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter3_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter1"
            app:layout_constraintStart_toEndOf="@id/letter2_1"
            app:layout_constraintEnd_toStartOf="@id/letter4_1"
            android:layout_marginTop="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter4_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter1"
            app:layout_constraintStart_toEndOf="@id/letter3_1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />
        <!-- Fila 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/letter1_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter1_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/letter2_2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter2_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter2_1"
            app:layout_constraintStart_toEndOf="@id/letter1_2"
            app:layout_constraintEnd_toStartOf="@id/letter3_2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter3_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter3_1"
            app:layout_constraintStart_toEndOf="@id/letter2_2"
            app:layout_constraintEnd_toStartOf="@id/letter4_2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter4_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter4_1"
            app:layout_constraintStart_toEndOf="@id/letter3_2"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- Fila 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/letter1_3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter1_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/letter2_3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter2_3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter2_2"
            app:layout_constraintStart_toEndOf="@id/letter1_3"
            app:layout_constraintEnd_toStartOf="@id/letter3_3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter3_3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter3_2"
            app:layout_constraintStart_toEndOf="@id/letter2_3"
            app:layout_constraintEnd_toStartOf="@id/letter4_3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter4_3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter4_2"
            app:layout_constraintStart_toEndOf="@id/letter3_3"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Fila 5 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/letter1_4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter1_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/letter2_4" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter2_4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter2_3"
            app:layout_constraintStart_toEndOf="@id/letter1_4"
            app:layout_constraintEnd_toStartOf="@id/letter3_4" />

        <androidx.cardview.widget.CardView
            android:id="@+id/letter3_4"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="60dp"
            app:layout_constraintTop_toBottomOf="@id/letter3_3"
            app:layout_constraintStart_toEndOf="@id/letter2_4"
            app:layout_constraintEnd_toStartOf="@id/letter4_4" />

        <androidx.cardview.widget.CardView
        android:id="@+id/letter4_4"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="5dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="60dp"
        app:layout_constraintTop_toBottomOf="@id/letter4_3"
        app:layout_constraintStart_toEndOf="@id/letter3_4"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Q -->
        <Button
            android:id="@+id/q"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="Q"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/w"/>

        <!-- Botón W -->
        <Button
            android:id="@+id/w"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="W"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/q"
            app:layout_constraintEnd_toStartOf="@id/e"
            app:layout_constraintTop_toTopOf="@id/q"/>

        <!-- Botón E -->
        <Button
            android:id="@+id/e"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="E"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/w"
            app:layout_constraintEnd_toStartOf="@id/r"
            app:layout_constraintTop_toTopOf="@id/q"/>

        <!-- Botón R -->
        <Button
            android:id="@+id/r"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="R"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/e"
            app:layout_constraintEnd_toStartOf="@id/t"
            app:layout_constraintTop_toTopOf="@id/q"/>

        <!-- Botón T -->
        <Button
            android:id="@+id/t"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="T"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/r"
            app:layout_constraintEnd_toStartOf="@id/y"
            app:layout_constraintTop_toTopOf="@id/q"/>

        <!-- Botón Y -->
        <Button
            android:id="@+id/y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="Y"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/t"
            app:layout_constraintEnd_toStartOf="@id/u"
            app:layout_constraintTop_toTopOf="@id/q"/>

        <!-- Botón U -->
        <Button
            android:id="@+id/u"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="U"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/y"
            app:layout_constraintEnd_toStartOf="@id/i"
            app:layout_constraintTop_toTopOf="@id/q"/>

        <!-- Botón I -->
        <Button
            android:id="@+id/i"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="I"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/u"
            app:layout_constraintEnd_toStartOf="@id/o"
            app:layout_constraintTop_toTopOf="@id/q"/>

        <!-- Botón O -->
        <Button
            android:id="@+id/o"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="O"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/i"
            app:layout_constraintEnd_toStartOf="@id/p"
            app:layout_constraintTop_toTopOf="@id/q"/>

        <!-- Botón P -->
        <Button
            android:id="@+id/p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="P"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/o"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/q"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
