<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tittle"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tablero tipo Wordle -->
        <GridLayout
            android:id="@+id/boardGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="5"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            app:layout_constraintTop_toBottomOf="@id/tittle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="15dp">

        <!-- Botón Q -->
        <Button
            android:id="@+id/q"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_q"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/w"/>

        <Button
            android:id="@+id/w"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_w"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/q"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/e"/>

        <Button
            android:id="@+id/e"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_e"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/w"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/r"/>

        <Button
            android:id="@+id/r"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_r"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/e"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/t"/>

        <Button
            android:id="@+id/t"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_t"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/r"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/y"/>
        <Button
            android:id="@+id/y"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_y"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/t"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/u"/>
        <Button
            android:id="@+id/u"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_u"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/y"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/i"/>

        <Button
            android:id="@+id/i"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_i"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/u"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/o"/>

        <Button
            android:id="@+id/o"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_o"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/i"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/p"/>

        <Button
            android:id="@+id/p"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_p"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/o"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/keyboard_row1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!-- Botón Q -->
        <Button
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_a"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/s"/>
        <Button
            android:id="@+id/s"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_s"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/a"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/d"/>

        <Button
            android:id="@+id/d"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_d"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/s"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/f"/>

        <Button
            android:id="@+id/f"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_f"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/d"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/g"/>

        <Button
            android:id="@+id/g"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_g"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/f"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/h"/>


        <Button
            android:id="@+id/h"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_h"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/g"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/j"/>


        <Button
            android:id="@+id/j"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_j"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/h"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/k"/>

        <Button
            android:id="@+id/k"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_k"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/j"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/l"/>

        <Button
            android:id="@+id/l"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_l"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/k"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ñ"/>
        <Button
            android:id="@+id/ñ"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="@string/key_ñ"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/l"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/keyboard_row2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/enter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_enter"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/z"/>
        <Button
            android:id="@+id/z"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_z"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/enter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/x"/>

        <Button
            android:id="@+id/x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_x"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/z"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/c"/>

        <Button
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_c"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/v"/>

        <Button
            android:id="@+id/v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_v"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/c"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b"/>

        <Button
            android:id="@+id/b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_b"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/v"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/n"/>

        <Button
            android:id="@+id/n"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_n"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/m"/>

        <Button
            android:id="@+id/m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_m"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/n"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:padding="0dp"
            android:text="@string/key_del"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/m"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:text="@string/key_restart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyboard_row3"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"/>



</androidx.constraintlayout.widget.ConstraintLayout>